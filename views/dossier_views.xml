<odoo>
    <record id="view_dossier_form" model="ir.ui.view">
        <field name="name">somasic.dossier.form</field>
        <field name="model">somasic.dossier</field>
        <field name="arch" type="xml">
            <form string="Dossier">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="interlocuteur_id"/>
                        <field name="date_ouverture"/>
                        <field name="disciplines"/>
                        <field name="state" widget="statusbar"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
                <notebook>
                    <page string="Proposition commerciale"/>
                    <page string="Devis"/>
                    <page string="Facture"/>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_dossier_tree" model="ir.ui.view">
        <field name="name">somasic.dossier.tree</field>
        <field name="model">somasic.dossier</field>
        <field name="arch" type="xml">
            <tree string="Dossier">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
</odoo>
